@{
    ViewBag.Title = ViewBag.CurrentTitle + " - QucikRMS";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-info-sign"></i></span>
                <h5>错误</h5>
            </div>
            <div class="widget-content">
                <div class="error_ex">
                    <h1>错误</h1>
                    <h3>温馨提示</h3>
                    <p>@ViewData["Message"]</p>
                    <a class="btn btn-warning btn-big" href="@Url.Action("Index", "Dashboard", new { Area = "Common" })">回到首页</a>
                </div>
            </div>
        </div>
    </div>
</div>