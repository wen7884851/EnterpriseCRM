<link href="~/Content/new/materialdesignicons.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h4>角色列表</h4></div>
            <div class="card-toolbar clearfix">
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="SRoleName">角色名称</label>
                        <input class="form-control" type="text" id="SRoleName" placeholder="角色名称..">
                    </div>
                </div>
                <div class="toolbar-btn-action" style="float:right">
                    <a class="btn btn-success m-r-5" href="#!" id="searchBtn" onclick="Search()"><i class="mdi mdi-magnify"></i> 查询</a>
                    <button type="button" class="btn btn-primary m-r-5" data-toggle="modal" onclick="OpenCreateRoleModal();">
                        <i class="mdi mdi-plus"></i>新增
                    </button>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Create")
    @Html.Partial("Edit")    
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="tablelist">
                        <thead>
                            <tr>
                                <th>角色名称</th>
                                <th>角色描述</th>
                                <th>成员数量</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <ul class="pagination" id="filter" style="float:right"></ul>
                <ul class="clear" style="clear:both"></ul>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/new/tablequery/tableList.js"></script>
<script src="~/Scripts/new/Core/role.js"></script>